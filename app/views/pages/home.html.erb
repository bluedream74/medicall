                <source media="(min-width: 768px)" srcset="<%= asset_path('home/flow/content01-pc.png.webp') %>" type="image/webp">
                <source media="(min-width: 768px)" srcset="<%= asset_path('home/flow/content01-pc.png') %>">
                <source media="(max-width: 767px)" srcset="<%= asset_path('home/flow/content01-sp.png.webp') %>" type="image/webp">
