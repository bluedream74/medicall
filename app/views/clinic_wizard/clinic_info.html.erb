<%= form_with(model: @clinic, url: { action: :update_clinic_info }, method: :put, local: true) do |f| %>
  <div>
    <label for="name" class="inline-block text-gray-800 text-sm sm:text-base mb-2">クリニック名</label>
    <%= f.text_field :name, autocomplete: "name", class: "w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2 border-gray-300" %>
  </div>
  <div>
    <label for="address" class="inline-block text-gray-800 text-sm sm:text-base mb-2">クリニック所在地</label>
    <%= f.text_field :address, autocomplete: "address", class: "w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2 border-gray-300" %>
  </div>
  <div>
    <label for="tel" class="inline-block text-gray-800 text-sm sm:text-base mb-2">クリニック電話番号</label>
    <%= f.text_field :tel, autocomplete: "tel", class: "w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2 border-gray-300" %>
  </div>
  <div>
    <label for="access" class="inline-block text-gray-800 text-sm sm:text-base mb-2">アクセス</label>
    <%= f.text_area :access, autocomplete: "access", class: "w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2 border-gray-300" %>
    <small>smsでアクセス案内が必要な場合</small>
  </div>
  <div>
    <label for="holiday" class="inline-block text-gray-800 text-sm sm:text-base mb-2">休診日</label>
    <%= f.text_field :holiday, autocomplete: "holiday", class: "w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2 border-gray-300" %>
  </div>
  <div>
    <label for="reserve" class="inline-block text-gray-800 text-sm sm:text-base mb-2">web予約URL</label>
    <%= f.text_field :reserve, autocomplete: "reserve", class: "w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2 border-gray-300" %>
    <small>予約システムを利用していない場合は空白で結構です。</small>
  </div>
  <%= f.hidden_field :id, value: @clinic.id %>

  <% if @clinic.new_record? %>
    <%= f.submit "次へ" %>
  <% else %>
    <%= f.submit "更新", name: "update" %>
  <% end %>
  
<% end %>
