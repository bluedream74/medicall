<%= turbo_frame_tag 'clinic_wizard' do %>
  <%= form_with(model: @clinic, url: @clinic.new_record? ? create_clinic_wizard_path : update_info_clinic_wizard_path(@clinic), local: true, data: { controller: "clinic-form", action: "clinic-form#submit" }) do |f| %>

    <div class="grid grid-cols-7 gap-4">
      <%= f.fields_for :schedules do |schedule_form| %>
        <div class="bg-white shadow rounded-lg p-4">
          <div class="field">
            <%= schedule_form.label :day_of_week, class: "block font-medium text-sm text-gray-700" %>
            <%= schedule_form.select :day_of_week, Schedule.day_of_weeks.keys, {}, class: "form-select block w-full mt-1" %>
          </div>
          <div class="field mt-4">
            <%= schedule_form.label :session, class: "block font-medium text-sm text-gray-700" %>
            <%= schedule_form.select :session, Schedule.sessions_i18n.invert, {}, class: "form-select block w-full mt-1" %>
          </div>
          <div class="field mt-4">
            <%= schedule_form.label :start_time, class: "block font-medium text-sm text-gray-700" %>
            <%= schedule_form.time_select :start_time, { minute_step: 15 }, { class: "form-select block w-full mt-1" } %>
          </div>
          <div class="field mt-4">
            <%= schedule_form.label :end_time, class: "block font-medium text-sm text-gray-700" %>
            <%= schedule_form.time_select :end_time, { minute_step: 15 }, { class: "form-select block w-full mt-1" } %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-6">
      <%= f.submit '次へ', class: "inline-block bg-gray-800 hover:bg-gray-700 active:bg-gray-600 focus-visible:ring ring-gray-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3" %>
    </div>

  <% end %>
<% end %>
